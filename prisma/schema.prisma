generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model play {
  id          String   @id @unique
  title       String
  author      String
  type        String
  duration    String
  description String   @db.Text
  audience    String   @default("general")
  published   Boolean  @default(false)
  created     DateTime @default(now())
}

model worker {
  id         String @id @unique
  name       String
  position   String
  department String
  bio        String @db.Text
}

model post {
  id        String   @id @unique
  title     String
  content   String   @db.Text
  published DateTime @default(now())
}

model vacancy {
  id          String   @id @unique
  title       String
  description String   @db.Text
  published   DateTime @default(now())
}
