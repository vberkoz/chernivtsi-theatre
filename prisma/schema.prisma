generator client {
  provider = "prisma-client-js"
  previewFeatures = ["clientExtensions"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Spectacle {
  id          String   @id @unique
  title       String
  author      String
  type        String
  duration    String
  description String   @db.Text
  audience    String   @default("general")
  published   Boolean  @default(false)
  created     DateTime @default(now())
}

model Worker {
  id         String @id @unique
  name       String
  position   String
  department String
  bio        String @db.Text
}

model Post {
  id        String   @id @unique
  title     String
  content   String   @db.Text
  published DateTime @default(now())
}

model Vacancy {
  id          String   @id @unique
  title       String
  description String   @db.Text
  published   DateTime @default(now())
}

model AdminPage {
  id    String @id @unique
  title String
  href  String
}
