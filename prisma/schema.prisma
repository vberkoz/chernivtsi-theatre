generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @unique
  title     String
  content   String   @db.Text
  published DateTime @default(now())
}

model Spectacle {
  id        String   @id @unique
  type      String
  title     String
  excerpt   String   @db.Text
  author    String
  duration  String
  published DateTime @default(now())
}

model Vacancy {
  id        String   @id @unique
  title     String
  content   String   @db.Text
  published DateTime @default(now())
}

model Worker {
  id         String @id @unique
  name       String
  position   String
  department String
  bio        String @db.Text
}

model accounts {
  id                  String  @id
  user_id             String
  type                String
  provider            String
  provider_account_id String
  refresh_token       String?
  access_token        String?
  expires_at          Int?
  token_type          String?
  scope               String?
  id_token            String?
  session_state       String?
  oauth_token_secret  String?
  oauth_token         String?

  @@unique([provider, provider_account_id])
}

model sessions {
  id            String   @id
  session_token String   @unique
  user_id       String
  expires       DateTime
}

model users {
  id             String    @id
  name           String?
  email          String?   @unique
  created_at     DateTime  @default(now())
  updated_at     DateTime
  email_verified DateTime?
  image          String?
}

model verificationtokens {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
