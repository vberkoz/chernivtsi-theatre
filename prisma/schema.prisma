generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["clientExtensions"]
}

datasource db {
  // provider = "mysql"
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(uuid())
  handle    String   @unique
  title     String
  type      String
  excerpt   String
  content   String   @db.Text
  published DateTime @default(now())
}

model Spectacle {
  id          String   @id @unique
  imageUrl    String
  title       String
  author      String
  type        String
  duration    String
  description String   @db.Text
  forChildren Boolean  @default(false)
  published   Boolean  @default(false)
  created     DateTime @default(now())
  events      Event[]
}

model Event {
  id          Int       @id @default(autoincrement())
  beginningAt DateTime  @unique
  spectacle   Spectacle @relation(fields: [spectacleId], references: [id])
  spectacleId String
}

model Vacancy {
  id          String   @id @unique
  imageUrl    String
  title       String
  description String   @db.Text
  published   DateTime @default(now())
}

model Worker {
  id         String @id @unique
  name       String
  position   String
  department String
  imageUrl   String
  bio        String @db.Text
}

model AdminPage {
  id    String @id @unique
  title String
  href  String
}
